{
  "name": "ffbt",
  "version": "1.0.0-beta.4",
  "description": "Build a Typescript app without pain",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "bin": {
    "ffbt": "./dist/cli/entrypoint.js"
  },
  "files": [
    "dist",
    "index.d.ts",
    "oclif.manifest.json"
  ],
  "scripts": {
    "start": "npm run ts-watch",
    "ts-watch": "tsc --watch --pretty",
    "build": "rm -rf dist && tsc",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:ci": "jest --ci",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "npm run build && oclif-dev manifest"
  },
  "dependencies": {
    "@oclif/command": "^1.5.19",
    "@oclif/config": "^1.13.3",
    "@oclif/plugin-help": "^2.2.2",
    "autoprefixer": "^9.7.3",
    "bundle-stats": "^1.15.1",
    "chalk": "^3.0.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.2.1",
    "file-loader": "^5.0.2",
    "fork-ts-checker-notifier-webpack-plugin": "^1.0.2",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.13.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.0",
    "stylelint": "^12.0.0",
    "ts-loader": "^6.2.1",
    "tslib": "^1.10.0",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.7.3",
    "url-loader": "^3.0.0",
    "webpack": "^4.41.2",
    "webpack-bundle-analyzer": "^3.6.0",
    "webpack-dev-server": "^3.9.0",
    "webpack-merge": "^4.2.2",
    "webpack-notifier": "^1.8.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "1.22.2",
    "@types/html-webpack-plugin": "^3.2.1",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.14",
    "@types/stylelint": "^9.10.1",
    "@types/webpack": "^4.41.0",
    "@types/webpack-dev-server": "^3.9.0",
    "@types/webpack-merge": "^4.1.5",
    "jest": "^24.9.0",
    "ts-jest": "^24.2.0",
    "utility-types": "^3.10.0"
  },
  "oclif": {
    "commands": "./dist/cli/commands",
    "bin": "ffbt",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "hooks": {
      "prerun": [
        "./dist/cli/banner.js"
      ]
    }
  },
  "repository": "git+https://github.com/readdle/ffbt.git",
  "keywords": [
    "cli",
    "build-tools",
    "frontend",
    "typescript",
    "webpack",
    "tslint",
    "bundler",
    "scss",
    "ready-to-use",
    "stylelint"
  ],
  "bugs": {
    "url": "https://github.com/readdle/ffbt/issues"
  },
  "homepage": "https://github.com/readdle/ffbt#readme"
}
