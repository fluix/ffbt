{
  "name": "ffbt",
  "version": "0.10.1",
  "description": "Tools for assembling your TypeScript web project",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "files": [
    "*"
  ],
  "bin": {
    "ffbt": "./dist/cli/entrypoint.js"
  },
  "scripts": {
    "start": "npm run ts-watch",
    "ts-watch": "tsc --watch --pretty",
    "build": "rm -rf dist && tsc",
    "test": "jest",
    "test-watch": "jest --watchAll",
    "compile-lint-rules": "tsc -m commonjs -t es6 ./linters/ts-rules/*.ts",
    "lint": "eslint .",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "npm run build && npm run compile-lint-rules && oclif-dev manifest"
  },
  "types": "./index.d.ts",
  "dependencies": {
    "@oclif/command": "1.5.19",
    "@oclif/config": "1.13.3",
    "@oclif/plugin-help": "2.2.1",
    "@types/lodash": "4.14.142",
    "@types/node": "12.7.9",
    "autoprefixer": "6.7.7",
    "chalk": "2.4.1",
    "clean-webpack-plugin": "0.1.19",
    "css-loader": "0.28.9",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.6",
    "find-up": "4.1.0",
    "fork-ts-checker-webpack-plugin": "0.4.10",
    "html-webpack-plugin": "3.2.0",
    "lodash": "4.17.15",
    "node-sass": "4.12.0",
    "opn": "5.4.0",
    "postcss-loader": "2.1.0",
    "raw-loader": "0.5.1",
    "sass-loader": "6.0.6",
    "stylelint": "9.8.0",
    "ts-loader": "3.5.0",
    "tslib": "^1.10.0",
    "tslint": "5.12.1",
    "tslint-config-airbnb": "5.11.1",
    "typescript": "^3.6.3",
    "uglifyjs-webpack-plugin": "1.1.8",
    "url-loader": "0.6.2",
    "utility-types": "3.8.0",
    "webpack": "3.11.0",
    "webpack-bundle-analyzer": "3.0.3",
    "webpack-dev-server": "2.11.3",
    "webpack-notifier": "1.7.0",
    "worker-loader": "1.1.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "1.22.2",
    "@types/jest": "24.0.18",
    "@types/webpack": "4.39.3",
    "eslint": "5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.17.2",
    "jest": "24.9.0",
    "npm-run-all": "4.1.5",
    "ts-jest": "24.1.0"
  },
  "oclif": {
    "commands": "./dist/cli/commands",
    "bin": "ffbt",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "git+https://github.com/readdle/ffbt.git",
  "keywords": [
    "cli",
    "build-tools",
    "frontend",
    "typescript",
    "webpack",
    "tslint",
    "bundler",
    "scss",
    "ready-to-use",
    "stylelint"
  ],
  "bugs": {
    "url": "https://github.com/readdle/ffbt/issues"
  },
  "homepage": "https://github.com/readdle/ffbt#readme"
}
