{
  "name": "ffbt",
  "version": "0.10.1",
  "description": "Tools for assembling your TypeScript web project",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "files": [
    "*"
  ],
  "bin": {
    "ffbt": "./dist/cli/entrypoint.js"
  },
  "scripts": {
    "start": "npm run ts-watch",
    "ts-watch": "tsc --watch --pretty",
    "build": "rm -rf dist && tsc",
    "test": "jest",
    "test-watch": "jest --watchAll",
    "compile-lint-rules": "tsc -m commonjs -t es6 ./linters/ts-rules/*.ts",
    "lint": "eslint .",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "npm run build && npm run compile-lint-rules && oclif-dev manifest"
  },
  "types": "./index.d.ts",
  "dependencies": {
    "@oclif/command": "1.5.19",
    "@oclif/config": "1.13.3",
    "@oclif/plugin-help": "2.2.1",
    "autoprefixer": "^9.6.1",
    "bundle-stats": "^1.10.1",
    "chalk": "2.4.1",
    "clean-webpack-plugin": "3.0.0",
    "css-loader": "3.2.0",
    "file-loader": "4.2.0",
    "fork-ts-checker-notifier-webpack-plugin": "^1.0.2",
    "fork-ts-checker-webpack-plugin": "^1.5.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "node-sass": "^4.12.0",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.0",
    "ts-loader": "^6.2.0",
    "tslint": "5.20.0",
    "tslint-config-airbnb": "5.11.1",
    "typescript": "^3.5.3",
    "url-loader": "^2.1.0",
    "webpack": "^4.41.0",
    "webpack-bundle-analyzer": "^3.5.2",
    "webpack-dev-server": "^3.8.1",
    "webpack-merge": "^4.2.1",
    "webpack-notifier": "1.8.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "1.22.2",
    "@types/html-webpack-plugin": "3.2.1",
    "@types/jest": "24.0.18",
    "@types/lodash": "4.14.142",
    "@types/node": "12.7.9",
    "@types/webpack": "4.39.5",
    "@types/webpack-dev-server": "3.4.0",
    "@types/webpack-merge": "4.1.5",
    "jest": "24.9.0",
    "ts-jest": "24.1.0",
    "tslib": "1.10.0",
    "utility-types": "3.8.0"
  },
  "oclif": {
    "commands": "./dist/cli/commands",
    "bin": "ffbt",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "repository": "git+https://github.com/readdle/ffbt.git",
  "keywords": [
    "cli",
    "build-tools",
    "frontend",
    "typescript",
    "webpack",
    "tslint",
    "bundler",
    "scss",
    "ready-to-use",
    "stylelint"
  ],
  "bugs": {
    "url": "https://github.com/readdle/ffbt/issues"
  },
  "homepage": "https://github.com/readdle/ffbt#readme"
}
